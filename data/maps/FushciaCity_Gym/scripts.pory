FushciaCity_Gym_MapScripts::
	.byte 0

FushciaCity_Gym_EventScript_Koga::
	famechecker FAMECHECKER_KOGA, FCPICKSTATE_COLORED, UpdatePickStateFromSpecialVar8005
	trainerbattle_single TRAINER_LEADER_KOGA, FushciaCity_Gym_Text_KogaIntro, FushciaCity_Gym_Text_KogaDefeat, FushciaCity_Gym_EventScript_DefeatedKoga, NO_MUSIC
	goto_if_unset FLAG_GOT_TM06_FROM_KOGA, FushciaCity_Gym_EventScript_GiveTM06
	msgbox FushciaCity_Gym_Text_KogaPostBattle
	release
	end

FushciaCity_Gym_EventScript_DefeatedKoga::
	famechecker FAMECHECKER_KOGA, 1
	clearflag FLAG_HIDE_FAME_CHECKER_KOGA_JOURNAL
	setflag FLAG_DEFEATED_KOGA
	setflag FLAG_BADGE05_GET
	set_gym_trainers 5
	goto FushciaCity_Gym_EventScript_GiveTM06
	end

FushciaCity_Gym_EventScript_GiveTM06::
	msgbox FushciaCity_Gym_Text_KogaExplainSoulBadge
	checkitemspace ITEM_TM06
	goto_if_eq VAR_RESULT, FALSE, FushciaCity_Gym_EventScript_NoRoomForTM06
	giveitem_msg FushciaCity_Gym_Text_ReceivedTM06FromKoga, ITEM_TM06
	setflag FLAG_GOT_TM06_FROM_KOGA
	msgbox FushciaCity_Gym_Text_KogaExplainTM06
	release
	end

FushciaCity_Gym_EventScript_NoRoomForTM06::
	msgbox FushciaCity_Gym_Text_MakeSpaceForThis
	release
	end

