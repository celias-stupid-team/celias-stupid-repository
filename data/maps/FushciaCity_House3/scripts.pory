raw `
FushciaCity_House3_MapScripts::
	.byte 0

FushciaCity_House3_EventScript_MoveDeleter::
	lock
	faceplayer
	msgbox FushciaCity_House3_Text_WouldYouLikeToForgetMove, MSGBOX_YESNO
	goto_if_eq VAR_RESULT, YES, FushciaCity_House3_EventScript_ChooseMonForMoveDeleter
	goto FushciaCity_House3_EventScript_CancelForgetMove
	end

FushciaCity_House3_EventScript_ChooseMonForMoveDeleter::
	msgbox FushciaCity_House3_Text_WhichMonShouldForgetMove
	special ChoosePartyMon
	waitstate
	goto_if_ge VAR_0x8004, PARTY_SIZE, FushciaCity_House3_EventScript_CancelForgetMove
	special IsSelectedMonEgg
	goto_if_eq VAR_RESULT, TRUE, FushciaCity_House3_EventScript_CantForgetMoveEgg
	special GetNumMovesSelectedMonHas
	goto_if_eq VAR_RESULT, 1, FushciaCity_House3_EventScript_CantForgetOnlyMove
	msgbox FushciaCity_House3_Text_WhichMoveShouldBeForgotten
	fadescreen FADE_TO_BLACK
	special SelectMoveDeleterMove
	fadescreen FADE_FROM_BLACK
	goto_if_eq VAR_0x8005, MAX_MON_MOVES, FushciaCity_House3_EventScript_ChooseMonForMoveDeleter
	special BufferMoveDeleterNicknameAndMove
	msgbox FushciaCity_House3_Text_MonsMoveShouldBeForgotten, MSGBOX_YESNO
	goto_if_eq VAR_RESULT, YES, FushciaCity_House3_EventScript_ForgetMove
	goto FushciaCity_House3_EventScript_CancelForgetMove
	end

FushciaCity_House3_EventScript_ForgetMove::
	special MoveDeleterForgetMove
	playfanfare MUS_MOVE_DELETED
	waitfanfare
	msgbox FushciaCity_House3_Text_MonHasForgottenMoveCompletely
	release
	end

FushciaCity_House3_EventScript_CantForgetOnlyMove::
	special BufferMoveDeleterNicknameAndMove
	msgbox FushciaCity_House3_Text_MonOnlyKnowsOneMove
	release
	end

FushciaCity_House3_EventScript_CantForgetMoveEgg::
	msgbox FushciaCity_House3_Text_NoEggShouldKnowMoves
	release
	end

FushciaCity_House3_EventScript_CancelForgetMove::
	msgbox FushciaCity_House3_Text_ComeAgainToForgetOtherMoves
	release
	end
`
