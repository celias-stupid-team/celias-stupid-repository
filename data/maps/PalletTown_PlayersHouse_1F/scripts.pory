raw `
.equ LOCALID_MOM, 1

PalletTown_PlayersHouse_1F_MapScripts::
	.byte 0

PalletTown_PlayersHouse_1F_EventScript_Mom::
	lock
	faceplayer
	goto_if_set FLAG_BEAT_RIVAL_IN_OAKS_LAB, PalletTown_PlayersHouse_1F_EventScript_MomHeal
	checkplayergender
	call_if_eq VAR_RESULT, MALE, PalletTown_PlayersHouse_1F_EventScript_MomOakLookingForYouMale
	call_if_eq VAR_RESULT, FEMALE, PalletTown_PlayersHouse_1F_EventScript_MomOakLookingForYouFemale
	closemessage
	applymovement LOCALID_MOM, Common_Movement_FaceOriginalDirection
	waitmovement 0
	release
	end

PalletTown_PlayersHouse_1F_EventScript_MomOakLookingForYouMale::
	msgbox PalletTown_PlayersHouse_1F_Text_AllBoysLeaveOakLookingForYou
	return

PalletTown_PlayersHouse_1F_EventScript_MomOakLookingForYouFemale::
	msgbox PalletTown_PlayersHouse_1F_Text_AllGirlsLeaveOakLookingForYou
	return

PalletTown_PlayersHouse_1F_EventScript_MomHeal::
	msgbox PalletTown_PlayersHouse_1F_Text_YouShouldTakeQuickRest
	closemessage
	call EventScript_OutOfCenterPartyHeal
	msgbox PalletTown_PlayersHouse_1F_Text_LookingGreatTakeCare
	release
	end

@ Displays special text if interacted with from side or back (which are normally inaccessible)
PalletTown_PlayersHouse_1F_EventScript_TV::
	lockall
	call_if_eq VAR_FACING, DIR_SOUTH, PalletTown_PlayersHouse_1F_EventScript_WTFBackSide
	call_if_eq VAR_FACING, DIR_WEST, PalletTown_PlayersHouse_1F_EventScript_YayRightSide
	call_if_eq VAR_FACING, DIR_NORTH, PalletTown_PlayersHouse_1F_EventScript_OopsWrongSide
	call_if_eq VAR_FACING, DIR_EAST, PalletTown_PlayersHouse_1F_EventScript_OopsLeftSide
	releaseall
	end

PalletTown_PlayersHouse_1F_EventScript_OopsWrongSide::
	msgbox PalletTown_PlayersHouse_1F_Text_OopsWrongSide
	return

PalletTown_PlayersHouse_1F_EventScript_OopsLeftSide::
	msgbox PalletTown_PlayersHouse_1F_Text_OopsLeftSide
	return

PalletTown_PlayersHouse_1F_EventScript_WTFBackSide::
	msgbox PalletTown_PlayersHouse_1F_Text_WTFBackSide
	return

PalletTown_PlayersHouse_1F_EventScript_YayRightSide::
	msgbox PalletTown_PlayersHouse_1F_Text_YayRightSide
	return

PalletTown_PlayersHouse_1F_EventScript_TVScreen::
	msgbox PalletTown_PlayersHouse_1F_Text_MovieOnTVFourBoysOnRailroad
	releaseall
	end

PalletTown_PlayersHouse_1F_EventScript_TVScreenMale::
	msgbox PalletTown_PlayersHouse_1F_Text_MovieOnTVFourBoysOnRailroad
	return

PalletTown_PlayersHouse_1F_EventScript_TVScreenFemale::
	msgbox PalletTown_PlayersHouse_1F_Text_MovieOnTVGirlOnBrickRoad
	return
`

script PalletTown_PlayersHouse_1F_EventScript_Plant {
	lock
	switch(var(VAR_NOT_OAK_SILLY)) {
		case 0:
			msgbox("That's not OAK, silly!", MSGBOX_AUTOCLOSE)
		case 1:
			msgbox("Nope!\nThat's not OAK either!", MSGBOX_AUTOCLOSE)
		case 2:
			msgbox("Nope, still not OAK!\n", MSGBOX_AUTOCLOSE)
		case 3:
			msgbox("Alas, OAK isn't over here\neither.", MSGBOX_AUTOCLOSE)
		case 4:
			msgbox("Upon double-checking, you find that\nthe tree is, in fact, still not OAK.", MSGBOX_DEFAULT)
		case 5:
			msgbox("It's OAK!\p…\p…Wait, maybe not.\n", MSGBOX_DEFAULT)
		case 6:
			msgbox("It looks kinda like a palm tree, if\nyou look at it from the right angle.\pBut it certainly doesn't look like\nOAK…\l…does it?", MSGBOX_DEFAULT)
		case 7:
			msgbox("Despite your continued insistance,\nthis remains not OAK.\pOh well.\n", MSGBOX_DEFAULT)
		case 8:
		case 9:
		case 10:
			msgbox("It's not OAK.\n", MSGBOX_DEFAULT)
		case 11:
			msgbox("For the last time, it's not OAK.\n", MSGBOX_DEFAULT)
		default:
			msgbox("…\n", MSGBOX_DEFAULT)

	}
	addvar(VAR_NOT_OAK_SILLY, 1)
	if(var(VAR_NOT_OAK_SILLY) > 12) {
		setvar(VAR_NOT_OAK_SILLY, 12)
	}
	release
}

