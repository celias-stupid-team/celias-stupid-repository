raw `
ViridianCity_PokemonCenter_1F_MapScripts::
	map_script MAP_SCRIPT_ON_TRANSITION, ViridianCity_PokemonCenter_1F_OnTransition
	map_script MAP_SCRIPT_ON_RESUME, CableClub_OnResume
	.byte 0

ViridianCity_PokemonCenter_1F_OnTransition::
	setrespawn SPAWN_VIRIDIAN_CITY
	end

ViridianCity_PokemonCenter_1F_EventScript_Nurse::
	lock
	faceplayer
	call EventScript_PkmnCenterNurse
	release
	end

ViridianCity_PokemonCenter_1F_EventScript_Boy::
	msgbox ViridianCity_PokemonCenter_1F_Text_PokeCenterInEveryTown, MSGBOX_NPC
	end

ViridianCity_PokemonCenter_1F_EventScript_Gentleman::
	msgbox ViridianCity_PokemonCenter_1F_Text_FeelFreeToUsePC, MSGBOX_NPC
	end

ViridianCity_PokemonCenter_1F_EventScript_Youngster::
	msgbox ViridianCity_PokemonCenter_1F_Text_PokeCentersHealMons, MSGBOX_NPC
	end
`
script ViridianCity_PokemonCenter_1F_EventScript_CeliaHealthcare {
	msgbox("This guy's line was one I stole\ndirectly from an old quote by\lChuggaaconroy in his FRLG LP!\pSadly, 15 years later it's still\ntrue.", MSGBOX_NPC)
	end
}

script EventScript_PkmnCenterNurse {
	goto_if_questlog(EventScript_ReleaseEnd)
	message(Text_WelcomeWantToHealPkmn)
	waitmessage
	multichoice(19, 8, MULTICHOICE_YES_NO, FALSE | (TRUE << 1))
	switch(var(VAR_RESULT)) {
	case 0:
		msgbox("Are you sure?", MSGBOX_YESNO)
		switch(var(VAR_RESULT)) {
			case 1:
				msgbox("Are you REALLY sure?", MSGBOX_YESNO)
				switch(var(VAR_RESULT)) {
					case 1:
						call(EventScript_PkmnCenterNurse_HealPkmn)
						
					default:
							msgbox("Okay, that's what I thought.\n", MSGBOX_DEFAULT)
						call(EventScript_PkmnCenterNurse_Goodbye)
				}
			default:
					msgbox("Okay, that's what I thought.\n", MSGBOX_DEFAULT)
					call(EventScript_PkmnCenterNurse_Goodbye)
					

		}
		
	case 1: 
		call(EventScript_PkmnCenterNurse_Goodbye)
	case SCR_MENU_CANCEL:
		call(EventScript_PkmnCenterNurse_Goodbye)
	}
}