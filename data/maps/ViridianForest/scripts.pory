script ViridianForest_EventScript_CeliaChecksDex {
	specialvar(VAR_RESULT, GetPokedexCount)
	if(var(VAR_RESULT) < 6) {
		lock

		//TODO check which tile the player interacted from
		setobjectxy(20,4,18)
		applymovement(20, CeliaApproaches)
		waitmovement(0)
		playse(SE_PIN)
		applymovement(OBJ_EVENT_ID_PLAYER, PlayerSeesHer)
		waitmovement(0)
		delay(15)
		textcolor(1)
		msgbox("Hi, there!\nI'm CELIA, this hack's creator.\pSorry to inturrupt, but I noticed\nsomething and had to pop in.", MSGBOX_DEFAULT)
		
		//TODO Logic for which Pokemon you're missing

		msgbox("Anyway, sorry for stopping you!\nThat's just some friendly advice.\lHave fun, and good luck vs BROCK!", MSGBOX_DEFAULT)
		closemessage
		delay(15)

		applymovement(20, CeliaAbsconds)
		waitmovement(0)
		release
	}
}

script ViridianForest_EventScript_CeliaGotCaught {
