	msgbox("Oh, hey there!\pI was planning on leaving, but\nI got tired.\pThanks for catching back up with\nme, though!\lHere's a gift!", MSGBOX_DEFAULT)
	release
}

movement CeliaApproaches {
	set_visible
	walk_up
	walk_up
	walk_up
	walk_up
	walk_up
	face_up
}

movement PlayerSeesHer {
	face_down
	emote_exclamation_mark
}

movement CeliaAbsconds {
	walk_right * 8
}