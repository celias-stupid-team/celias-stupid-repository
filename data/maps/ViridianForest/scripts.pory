script EventScript_DadHeal {
	fadescreen(FADE_TO_BLACK)
	closemessage
	playfanfare(MUS_HEAL)
	waitfanfare
	special(HealPlayerParty)
	fadescreen(FADE_FROM_BLACK)
	msgbox(("DAD: There!\nBest of luck to you!"), MSGBOX_DEFAULT)
	return
}

